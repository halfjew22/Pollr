<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.tipsandtricks.Pollr.view.AddPollActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPollName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:hint="Poll Question"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOption1"
        android:layout_below="@+id/etPollName"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="68dp"
        android:hint="New option"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOption2"
        android:hint="New option"
        android:layout_below="@+id/etOption1"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOption3"
        android:hint="New option"
        android:layout_below="@+id/etOption2"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/bPost"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/etPollName"
        android:onClick="postPoll"/>
</RelativeLayout>
